{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "Products"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "product_image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "product_name": {
      "type": "string"
    },
    "product_price": {
      "type": "decimal"
    },
    "product_description": {
      "type": "text"
    },
    "size": {
      "type": "json"
    },
    "categories": {
      "type": "enumeration",
      "enum": [
        "discounted_product",
        "latest_product",
        "grocery_staples",
        "kitchen_essentials"
      ]
    }
  }
}
